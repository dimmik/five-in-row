
<line x1=@fromXl1 y1=@fromYl1 x2=@toXl1 y2=@toYl1 stroke="#FF0808" stroke-linecap="round" stroke-width="4" stroke-opacity=@opacity/>
<line x1=@fromXl2 y1=@fromYl2 x2=@toXl2 y2=@toYl2 stroke="#FF0808" stroke-linecap="round" stroke-width="4" stroke-opacity=@opacity/>

@code {
    [Parameter]
    public int x { get; set; } = 0;
    [Parameter]
    public int y { get; set; } = 0;
    [Parameter]
    public int size { get; set; } = 10;
    [Parameter]
    public string opacity { get; set; } = "1";

    int fromXl1;
    int toXl1;
    int fromYl1;
    int toYl1;
    int fromXl2;
    int toXl2;
    int fromYl2;
    int toYl2;

    protected override void OnParametersSet()
    {
        fromXl1 = x - size / 2;
        fromYl1 = y - size / 2;
        toXl1 = x + size / 2;
        toYl1 = y + size / 2;

        fromXl2 = x + size / 2;
        fromYl2 = y - size / 2;
        toXl2 = x - size / 2;
        toYl2 = y + size / 2;
    }
}
